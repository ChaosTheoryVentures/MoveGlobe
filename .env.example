# Application Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
# For external database (e.g., Neon, Supabase)
DATABASE_URL=postgresql://username:password@host:5432/database

# For local PostgreSQL (when using docker-compose)
POSTGRES_USER=moveglobe
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=moveglobe

# Security
SESSION_SECRET=your-very-long-random-session-secret-here
ADMIN_PASSWORD=your-admin-panel-password-here

# External Services (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Docker Compose Profiles (uncomment to activate)
# COMPOSE_PROFILES=production  # Includes nginx
# COMPOSE_PROFILES=development # Includes adminer
# COMPOSE_PROFILES=with-redis  # Includes redis for sessions